<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
   <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">

    <h1>
    Welcome to My Twitter
    </h1>
    <h3> A mini Twitter like application! </h3>
    <h4> Sign up now! </h4>
    <p>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>

  <br>
  <br>
  <%= link_to image_tag("butters1.jpg", alt: "Butters"), 'http://google.ca/' %>
  </div>
<% end %>

